{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "CI": "false",
        "DISABLE_ESLINT_PLUGIN": "true",
        "GENERATE_SOURCEMAP": "false"
      }
    }
  }
}